{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@constants": ["./constants"],
      "@enums/*": ["./enums/*"],
      "@features/*": ["./features/*"],
      "@models": ["./models"],
      "@pages/*": ["./pages/*"],
      "@routes": ["./routes"],
      "@types": ["./types"],
      "@styles/*": ["./styles/*"],
      "@ui": ["./ui"]
    },
  },
  "include": [
    "src/**/*",
    "src", "react-app-env.d.ts",
  ]
}